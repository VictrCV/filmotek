{% extends 'base.html.twig' %}
{% block body %}
    {{ parent() }}
    <div class="filmotek-title">
        <img src="{{ asset('img/logo.png') }}" class="filmotek-logo">
        <u>Filmotek</u>
    </div>
    <div class="container mt-3 color-text search-container">
        {{ form_start(form) }}
        <div class="input-group mb-3 mx-auto">
            {{ form_widget(form.title) }}
            {{ form_widget(form.search) }}
        </div>
        <div class="row justify-content-center mb-4">
            <div class="col">
                {{ form_row(form.exact) }}
            </div>
            <div class="col">
                {{ form_row(form.genre) }}
            </div>
            <div class="col">
                {{ form_row(form.type) }}
            </div>
        </div>

        {% if app.session.get('jwt') != null %}
            <div class="text-center">
                <hr class="border border-1">
                <a class="btn btn-form px-5 mt-2" role="button" href="{{ path('recommendation') }}">
                    <span class="material-icons align-middle">keyboard_double_arrow_right</span>
                    Give me a recommendation
                    <span class="material-icons align-middle">keyboard_double_arrow_left</span>
                </a>
            </div>
        {% endif %}
        {{ form_end(form) }}
    </div>
{% endblock %}
{% block sectiontitle %}Search{% endblock %}